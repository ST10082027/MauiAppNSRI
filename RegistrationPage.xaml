<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppNSRI.RegistrationPage"
             Title="Register">
    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="Register" FontSize="24" HorizontalOptions="Center" FontAttributes="Bold"/>
            <Entry Placeholder="Name" x:Name="NameEntry" Margin="0,10"/>
            <Entry Placeholder="Surname" x:Name="SurnameEntry" Margin="0,10"/>
            <Entry Placeholder="Username" x:Name="UsernameEntry" Margin="0,10"/>
            <Entry Placeholder="Password" x:Name="PasswordEntry" IsPassword="True" Margin="0,10"/>
            <Entry Placeholder="Date of Birth" x:Name="DobEntry" Margin="0,10"/>
            <Entry Placeholder="ID Number" x:Name="IdEntry" Margin="0,10"/>
            <Label Text="Upload National ID (Front)" FontSize="14" Margin="0,10,0,0"/>
            <Button Text="Choose File" Command="{Binding ChooseFileCommand}" />
            <Label Text="Upload National ID (Back)" FontSize="14" Margin="0,10,0,0"/>
            <Button Text="Choose File" Command="{Binding ChooseFileCommand}" />
            <Button Text="Register" Clicked="OnRegisterClicked" BackgroundColor="DarkBlue" TextColor="White" Margin="0,20,0,0"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
