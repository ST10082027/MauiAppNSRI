<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppNSRI.LoginPage"
             Title="Login">
    <StackLayout Padding="20" VerticalOptions="Center" HorizontalOptions="Center">
        <Frame CornerRadius="10" BackgroundColor="LightGray" Padding="20" HasShadow="True">
            <StackLayout>
                <Label Text="Login" FontSize="24" HorizontalOptions="Center" FontAttributes="Bold"/>
                <Entry Placeholder="Username" x:Name="UsernameEntry" Margin="0,10"/>
                <Entry Placeholder="Password" x:Name="PasswordEntry" IsPassword="True" Margin="0,10"/>
                <Button Text="Login" Clicked="OnLoginClicked" BackgroundColor="DarkBlue" TextColor="White"/>
                <Label Text="Don't have an account? Please contact support@nsri.org" FontSize="12" TextColor="Gray" HorizontalOptions="Center" Margin="0,20,0,0"/>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>
